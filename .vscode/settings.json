{
    "appService.defaultWebAppToDeploy": "None",
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": "explicit"
    },
    "eslint.validate": [
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact"
    ],
    // Optional: if you're using Prettier and want to avoid conflicts, you can disable default formatting
    "editor.formatOnSave": false,
    // Only format when ESLint configuration is detected
    "editor.formatOnSaveMode": "modificationsIfAvailable",
    
}